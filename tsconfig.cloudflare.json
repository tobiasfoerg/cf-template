{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"include": [
		".react-router/types/**/*",
		"src/**/*",
		"src/**/.server/**/*",
		"src/**/.client/**/*",
		"worker/**/*",
		"worker-configuration.d.ts",
		"src/lib/auth/.client"
	],
	"compilerOptions": {
		"composite": true,
		"strict": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["@cloudflare/workers-types", "vite/client", "./worker-configuration.d.ts"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"rootDirs": [".", "./.react-router/types"],
		"paths": {
			"@/*": ["./src/*"],
			"ui": ["./src/components/ui"]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}
